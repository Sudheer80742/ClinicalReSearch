<mvc:View
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" controllerName="rbx.107.clinicalresearcher.controller.View1"
    xmlns:sm="sap.ui.comp.smarttable"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content >
            <sm:SmartTable 
            entitySet="CRGendata"
            enableAutoBinding="true"
            initiallyVisibleFields="SiteCode,SiteName,CRCode,CRName,Specialities,CVAvailable,Status"
            id="smarttable"
            >
            <sm:customToolbar>
                <Toolbar >
                <Title text="Clinical Research"/>
                <SearchField search="onSearch" width="40%"/>
                <ToolbarSpacer ></ToolbarSpacer>
                <Button icon="sap-icon://sort" press="onSort"/> 
                <Button icon="sap-icon://add" press="onAdd"/>
                <Button icon="sap-icon://delete" press="onDelete" enabled="false" id="del1"/>
                </Toolbar>
            </sm:customToolbar>
            <Table mode="MultiSelect" selectionChange="onSelectionItem">
            <ColumnListItem type="Active" press="onColumnListItemPress"/>
            </Table>
            </sm:SmartTable>
        </content>
    </Page>
</mvc:View>



