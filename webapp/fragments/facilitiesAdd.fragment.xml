<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
    xmlns:smform="sap.ui.comp.smartform"
    xmlns:smfield="sap.ui.comp.smartfield"
>
<Dialog>
 <smform:SmartForm id="smartformAdd1" editable="true">
                                        <smform:Group>
                                            <smform:GroupElement>
                                                <smfield:SmartField
                                                    editable="false"
                                                    value="{SiteCode}"
                                                />
                                            </smform:GroupElement>
                                            <smform:GroupElement>
                                                <smfield:SmartField
                                                    value="{Primaryfacility}"
                                                />
                                            </smform:GroupElement>
                                            <smform:GroupElement>
                                                <smfield:SmartField
                                                    value="{DepartmentName}"
                                                />
                                            </smform:GroupElement>
                                              <smform:GroupElement>
                                                <smfield:SmartField
                                                    value="{Address}"
                                                />
                                            </smform:GroupElement>
                                        </smform:Group>
                                    </smform:SmartForm>
                                    <Toolbar >
                                    <Button text="save" press="onSave1"/>
                                    <Button text="cancel" press="onClose"/>
                                    </Toolbar>
                                    </Dialog>
</c:FragmentDefinition>