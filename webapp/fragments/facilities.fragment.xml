<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:smTable="sap.ui.comp.smarttable"
	xmlns:table="sap.ui.table"
	    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <smTable:SmartTable
        id="smartTable1"
        entitySet="CRFACILITIESAFFILIATIONS"
        editable="{data>/isEditable}"
        tableBindingPath="to_CRFACILITIESAFFILIATIONS"
        enableAutoBinding="true"
		app:useSmartField="true"
        initiallyVisibleFields="Primaryfacility,DepartmentName,Address"
    >
        <smTable:customToolbar>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://add"
                    press="onAddTab1"
                />
                <Button
                    icon="sap-icon://delete"
                    press="ondel1"
                />
            </Toolbar>
        </smTable:customToolbar>
		<table:Table rowsUpdated="onROwsUpdated" minAutoRowCount="1" />
    </smTable:SmartTable>
</c:FragmentDefinition>
